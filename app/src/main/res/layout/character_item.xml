<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="horizontal">

    <ImageView
        android:id="@+id/character_image_view_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp" />

<TextView
    android:text="TextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_toEndOf="@+id/character_image_view_item"
    android:layout_marginStart="0dp"
    android:layout_marginTop="

    20dp"
    android:id="@+id/text_view_name"
    android:textSize="17sp"
    android:textStyle="normal|bold" />

    <ProgressBar
        android:id="@+id/lifePB"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/character_image_view_item"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lifePB"
        android:layout_toEndOf="@+id/character_image_view_item"
        android:text="Points de vie " />


</RelativeLayout>